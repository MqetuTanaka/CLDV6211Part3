@model IEnumerable<Web.Models.Booking>

@{
    ViewData["Title"] = "Search Bookings";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-info text-white">
        <h3 class="mb-0">🔍 Search Bookings</h3>
    </div>
    <div class="card-body">
        <form asp-action="SearchResults" method="get" class="row g-3">
            <div class="col-md-6">
                <label for="searchTerm" class="form-label fw-semibold">Event or Venue</label>
                <input type="text" name="searchTerm" class="form-control" placeholder="Enter event or venue name..." />
            </div>

            <div class="col-md-4">
                <label for="bookingDate" class="form-label fw-semibold">Booking Date</label>
                <input type="date" name="bookingDate" class="form-control" />
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </form>
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-light">
            <h4 class="mb-0">📋 Search Results</h4>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover text-center align-middle m-0">
                <thead class="table-secondary">
                    <tr>
                        <th>Booking Date</th>
                        <th>Event</th>
                        <th>Venue</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.BookingDate.ToShortDateString()</td>
                            <td>@booking.Event?.EventName</td>
                            <td>@booking.Venue?.VenueName</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@booking.BookingId" class="btn btn-outline-info btn-sm me-1">👁️</a>
                                <a asp-action="Edit" asp-route-id="@booking.BookingId" class="btn btn-outline-warning btn-sm me-1">✏️</a>
                                <a asp-action="Delete" asp-route-id="@booking.BookingId" class="btn btn-outline-danger btn-sm">🗑️</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else if (Model != null)
{
    <div class="alert alert-warning mt-4 text-center">
        No bookings found for your search.
    </div>
}