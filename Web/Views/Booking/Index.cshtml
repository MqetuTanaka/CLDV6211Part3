@model IEnumerable<Web.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
        <h3 class="mb-0">📑 Bookings</h3>
        <a asp-action="Create" class="btn btn-success">➕ Create New Booking</a>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped table-hover text-center align-middle m-0">
            <thead class="table-dark">
                <tr>
                    <th>Booking Date</th>
                    <th>Event</th>
                    <th>Venue</th>
                    <th>Venue Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.BookingDate.ToShortDateString()</td>
                        <td>@booking.Event?.EventName</td>
                        <td>@booking.Venue?.VenueName</td>
                        <td>
                            @if (!string.IsNullOrEmpty(booking.Venue?.ImageUrl))
                            {
                                <img src="@booking.Venue.ImageUrl" alt="Venue Image"
                                     class="rounded shadow-sm"
                                     style="width: 70px; height: 70px; object-fit: cover;" />
                            }
                            else
                            {
                                <span class="text-muted">No image</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@booking.BookingId" class="btn btn-outline-info btn-sm me-1">👁️</a>
                            <a asp-action="Edit" asp-route-id="@booking.BookingId" class="btn btn-outline-warning btn-sm me-1">✏️</a>
                            <a asp-action="Delete" asp-route-id="@booking.BookingId" class="btn btn-outline-danger btn-sm">🗑️</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>