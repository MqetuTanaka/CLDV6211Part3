@model Web.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0">⚠️ Confirm Booking Deletion</h3>
    </div>
    <div class="card-body">
        <p class="fs-5 mb-4">Are you sure you want to permanently delete this booking?</p>

        <dl class="row">
            <dt class="col-sm-3">Event</dt>
            <dd class="col-sm-9">@Model.Event?.EventName</dd>

            <dt class="col-sm-3">Venue</dt>
            <dd class="col-sm-9">@Model.Venue?.VenueName</dd>

            <dt class="col-sm-3">Booking Date</dt>
            <dd class="col-sm-9">@Model.BookingDate.ToShortDateString()</dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="BookingId" />
            <button type="submit" class="btn btn-danger me-2">🗑️ Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</div>