@model Web.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-success text-white">
        <h3 class="mb-0">➕ Create New Booking</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="BookingDate" class="form-label fw-semibold"></label>
                <input asp-for="BookingDate" type="date" class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EventId" class="form-label fw-semibold"></label>
                <select asp-for="EventId" class="form-select" asp-items="ViewBag.Events"></select>
                <span asp-validation-for="EventId" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="VenueId" class="form-label fw-semibold"></label>
                <select asp-for="VenueId" class="form-select" asp-items="ViewBag.Venues"></select>
                <span asp-validation-for="VenueId" class="text-danger small"></span>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-success me-2">Create</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}