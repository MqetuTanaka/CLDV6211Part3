@model Web.Models.Venue

@{
    ViewData["Title"] = "Create Venue";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">➕ Create New Venue</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="VenueName" class="form-label fw-semibold"></label>
                <input asp-for="VenueName" class="form-control" placeholder="Venue Name" />
                <span asp-validation-for="VenueName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Location" class="form-label fw-semibold"></label>
                <input asp-for="Location" class="form-control" placeholder="City or suburb" />
                <span asp-validation-for="Location" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Capacity" class="form-label fw-semibold"></label>
                <input asp-for="Capacity" type="number" class="form-control" placeholder="Capacity" min="0" />
                <span asp-validation-for="Capacity" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label fw-semibold"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Optional image URL" />
                <span asp-validation-for="ImageUrl" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImageFile" class="form-label fw-semibold">Upload Image</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger small"></span>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-success me-2">Create</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}