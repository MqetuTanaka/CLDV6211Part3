@model IEnumerable<Web.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<form method="get" asp-action="Index" class="mb-4">
    <div class="row">
        <div class="col-md-3">
            <label>Event Type:</label>
            <select name="eventType" class="form-control">
                <option value="">All Types</option>
                @foreach (var et in ViewBag.EventTypes)
                {
                    <option value="@et.EventTypeId"
                            selected="@(ViewBag.SelectedEventType == et.EventTypeId)">
                        @et.Name
                    </option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label>Location:</label>
            <input type="text" name="location" class="form-control"
                   value="@ViewBag.Location" placeholder="Enter location" />
        </div>
        <div class="col-md-3">
            <label>Availability:</label>
            <select name="availability" class="form-control">
                <option value="">All</option>
                <option value="true" selected="@(ViewBag.Availability == true)">Available</option>
                <option value="false" selected="@(ViewBag.Availability == false)">Not Available</option>
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Filter</button>
</form>

<h2 class="mb-3">Venues</h2>

<table class="table table-striped table-bordered text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Venue Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venue in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(venue.ImageUrl))
                    {
                        <img src="@venue.ImageUrl" alt="Venue Image"
                             class="rounded" style="width: 60px; height: 60px;" />
                    }
                    else
                    {
                        <span class="text-muted">No image</span>
                    }
                </td>
                <td>@venue.VenueName</td>
                <td>@venue.Location</td>
                <td>@venue.Capacity</td>
                <td>
                    @if (venue.IsAvailable)
                    {
                        <span class="badge bg-success">Available</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Not Available</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@venue.VenueId"
                       class="btn btn-outline-info btn-sm me-1">👁️</a>
                    <a asp-action="Edit" asp-route-id="@venue.VenueId"
                       class="btn btn-outline-warning btn-sm me-1">✏️</a>
                    <a asp-action="Delete" asp-route-id="@venue.VenueId"
                       class="btn btn-outline-danger btn-sm">🗑️</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success mt-4">➕ Create New Venue</a>

<style>
    table img {
        object-fit: cover;
    }
</style>