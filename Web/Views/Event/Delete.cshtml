@model Web.Models.Event

@{
    ViewData["Title"] = "Delete Event";
    var deleteError = TempData["DeleteError"] as string;
}

@if (!string.IsNullOrEmpty(deleteError))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @deleteError
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0">⚠️ Confirm Deletion</h3>
    </div>
    <div class="card-body">
        <p class="fs-5 mb-4">Are you sure you want to permanently delete this event?</p>

        <dl class="row">
            <dt class="col-sm-3">Event Name</dt>
            <dd class="col-sm-9">@Model.EventName</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.EventDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Venue</dt>
            <dd class="col-sm-9">@Model.Venue?.VenueName</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="EventId" />
            <button type="submit" class="btn btn-danger me-2">🗑️ Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</div>