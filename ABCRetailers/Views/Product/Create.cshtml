@model ABCRetailers.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<h1>Create Product</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data" id="createForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" required />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" id="Price" name="Price"
                       class="form-control"
                       type="number" step="0.01" min="0.01"
                       placeholder="29.99" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StockAvailable" class="control-label"></label>
                <input asp-for="StockAvailable" class="form-control" type="number" min="0" required />
                <span asp-validation-for="StockAvailable" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Product Image</label>
                <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                <span class="form-text">Upload an image (optional, JPG/PNG/GIF)</span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById("createForm").addEventListener("submit", function (e) {
            const priceInput = document.getElementById("Price");
            if (priceInput && parseFloat(priceInput.value) <= 0) {
                e.preventDefault();
                alert("Price must be greater than zero.");
                priceInput.focus();
            }
        });
    </script>
}
